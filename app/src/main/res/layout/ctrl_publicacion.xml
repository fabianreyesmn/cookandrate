<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagenChef"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/cocinero"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tituloReceta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Título de Receta"
                android:textSize="20sp"
                android:textColor="@color/dark"
                android:fontFamily="serif"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/nombreChef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Nombre del Chef"
                android:textSize="16sp"
                android:textColor="@color/dark"
                android:fontFamily="serif"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:fontFamily="serif"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaIngredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/dark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasos elaboración"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:fontFamily="serif"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaElaboracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ver más"
            android:textAlignment="textStart"
            android:background="@color/transparent"
            android:textColor="@color/dark"
            android:fontFamily="serif"
            android:textSize="14sp"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <Button
                android:id="@+id/meEncanta"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_favorite_border_24"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/meGusta"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_thumb_up_off_alt_24"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/noMeGusta"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_thumb_down_off_alt_24"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">
            <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text"
                android:fontFamily="serif"
                android:textColor="@color/dark"
                android:textAlignment="center"
                android:hint="0"
                android:textColorHint="@color/gris"
                android:paddingVertical="8dp"
                android:paddingHorizontal="18dp"/>
            <Button
                android:id="@+id/rate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_gold_star_border_24"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="3dp"
        android:src="@drawable/fondo_publi"/>
</LinearLayout>